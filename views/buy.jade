title Buy 

body 
    .container 
        include shopnav 

    case toBuy
        when '1'
            - var name='無限手套'
            - var img='jpknife.jpg'
            - var price=10000000
        when '2'
            - var name='雷神之錘'
            - var img='mask.jpg'
            - var price=5000000
        when '3'
            - var name='復活手環'
            - var img='reborn.jpg'
            - var price=1000000
        default 
            - var name=''
            - var img=''
            - var price=999999999999999
    .container
        .card.p-3.p-4 
            .text-center
                p #{name}
                img(src="/images/#{img}")
            .text-center.mt-3 
                .buttons 
                    button.btn.btn-outline-primary.px-4 
                        a(href="/shop/buy/#{name}/cash" style="text-decoration: none") Buy

link(rel="stylesheet", href="/stylesheets/shopStyle.css")
link(rel="stylesheet", href="/stylesheets/bootstrap.css")